pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/yourusername/your-repo.git'
            }
        }

        stage('Build Image') {
            steps {
                script {
                    sh 'docker build -t Suii_app:latest .'
                }
            }
        }

        stage('Deploy') {
            steps {
                script {
                    sh '''
                    docker stop Suii_app || true
                    docker rm Suii_app || true
                    docker run -d --name Suii_app -p 5000:5000 Suii_app:latest
                    '''
                }
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}
